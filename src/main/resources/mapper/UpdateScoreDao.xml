<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.zrquan.sms.dao.ScoreDao">
    <resultMap id="ScoreUpdateResultMap" type="org.zrquan.sms.entity.Score">
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="value" property="value" jdbcType="DOUBLE"/>
        <result column="identity" property="identity" jdbcType="TINYINT"/>
        <result column="course_id" property="course" jdbcType="DOUBLE"/>
        <result column="student_id" property="student" jdbcType="TINYINT"/>


    </resultMap>

    <insert id="addUpdateScore" parameterType="Score" useGeneratedKeys="true">
        insert into update_score (course_id, student_id, value, identity)
        values (#{course_id}, #{student_id}, #{value}, #{identity})
    </insert>

    <delete id="deleteUpdateStudent" parameterType="Score">
        DELETE FROM update_score
        WHERE (student_id = #{studentID}  and course_id = #{course_id})
    </delete>

</mapper>